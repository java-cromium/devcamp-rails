<h1>Portfolio Items</h1>
<!-- Below we have 2 ways of having the same (link), the better practice is to use the
link_to method -->
<!-- <a href="new/">Create New Item</a> -->
<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <p><%= link_to item.title, portfolio_show_path(item) %></p>
  <!-- The code below (commented out) and the code on top both show the title, except the one on top is hyperlinked. -->
  <!-- <p><%= item.title %></p> -->
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
  <%= link_to "Edit", edit_portfolio_path(item.id) %>
  <%= link_to 'Delete Portfolio Item', portfolio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
  <!-- <a href="<%= item.id%>/edit">Edit Two</a>
  "This is the same as the code above except the one on top is cleaner"-->
<% end %>
